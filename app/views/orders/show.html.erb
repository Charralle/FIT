<div class="container">
  <div class="row py-4">
    <div class="col-md-3"><%= image_tag "https://res.cloudinary.com/fit-ts/image/upload/v1654522181/fit/#{@order.garment.image_name}", width: '100%' %></div>
    <div class="col">
      <h1>Order #<%= @order.id %> <small><span class="badge badge-alert"><%= @order.state %></span></small></h1>
      <ul class="list-unstyled">
        <li><strong>ISSUED ON</strong> <%= @order.created_at.to_date %></li>
        <li><strong>GARMENT</strong> <%= @order.garment.name %> [<%= @order.garment.name %>]</li>
        <li><strong>TOTAL</strong> <%= humanized_money_with_symbol @order.amount %></li>
        </li>
      </ul>
      <p>Estimated delivery in <strong>12 business days</strong></p>
    </div>
  </div>
</div>
